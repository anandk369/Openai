
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_play"
        android:background="@drawable/circular_button_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Play button" />

    <ImageView
        android:id="@+id/settings_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_settings"
        android:background="@drawable/circular_button_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Settings button" />

    <LinearLayout
        android:id="@+id/option_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/option_a_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_option_a"
            android:background="@drawable/circular_button_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="Option A" />

        <ImageView
            android:id="@+id/option_b_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_option_b"
            android:background="@drawable/circular_button_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="Option B" />

        <ImageView
            android:id="@+id/option_c_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_option_c"
            android:background="@drawable/circular_button_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="Option C" />

        <ImageView
            android:id="@+id/option_d_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_option_d"
            android:background="@drawable/circular_button_background"
            android:padding="8dp"
            android:contentDescription="Option D" />

    </LinearLayout>

</LinearLayout>
